{{> header}}

<div class="w3-container">
    <h1 class="w3-container titulo w3-center">Iniciar Sesion</h1>
</div>

<div class="w3-container w3-content w3-center " style="max-width:500px" id="band">

    <form action="/login/procesarAlta"  method="post">
        <div>
            <label for="username">Mail:</label>
            <input class="w3-input w3-light-grey" type="text" name="username">
        </div>
        <div>
            <label for="password">Password:</label>
            <input class="w3-input w3-light-grey" type="password" name="password">
        </div>

        <button class="w3-button w3-black w3-margin-top w3-round" type="submit">Iniciar sesion</button>

    </form>
    <p>No tenés una cuenta? <a href="/registro/alta">Registráte!</a></p>
    {{#error}}
        <div class="w3-panel w3-pale-red w3-border w3-round w3-animate-bottom w3-display-bottommiddle" style='width: 50%;'>
            <p class="w3-text-red">{{error}}</p>
        </div>
    {{/error}}
</div>
{{> footer}}