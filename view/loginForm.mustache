{{> header}}
<div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="band">

    <h1>Iniciar Sesion</h1>
    <form action="/login/procesarAlta"  method="post">
        <div>
            <label for="username">Mail:</label>
            <input class="w3-input w3-light-grey" type="text" name="username">
        </div>
        <div>
            <label for="password">Password:</label>
            <input class="w3-input w3-light-grey" type="password" name="password">
        </div>

        <button class="w3-button w3-black w3-margin-top" type="submit">Iniciar sesion</button>

    </form>
</div>
{{> footer}}