<div class="w3-container w3-content w3-center w3-padding-64" style="max-width:500px" id="band">
    <h1>Agrega Seccion</h1>
    <form action="/contenidista/procesarSeccion"  method="post">
        <div>
            <label for="edicion">Elegi una edicion:</label>
            <select name="edicion" onchange="muestraSecciones(this.value)" class="w3-input w3-light-grey w3-margin-top">
              <option value="0">Seleccione una edicion</option>
              {{#listaEdiciones}}
              <option value="{{id}}">{{edicion}}</option>
              {{/listaEdiciones}}
            </select>
        </div>
        <div id="secciones" class="w3-margin-top">
        </div>
        <button class="w3-button w3-black w3-margin-top" type="submit" onsubmit="muestraMensaje()">Enviar</button>
    </form>

    {{#exito}}
        <div class="w3-panel w3-pale-green w3-border w3-round w3-animate-bottom w3-display-bottommiddle">
            <p class="w3-text-green">{{exito}}</p>
        </div>
    {{/exito}}

    {{#error}}
        <div class="w3-panel w3-pale-red w3-border w3-round w3-animate-bottom w3-display-bottommiddle">
            <p class="w3-text-red">{{error}}</p>
        </div>
    {{/error}}
</div>