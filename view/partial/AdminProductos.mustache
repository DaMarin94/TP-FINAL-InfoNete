    {{#listaProductos}}
        <tr>
            <td>{{id}}</td>
            <td>{{nombre}}</td>
            <td>{{tipo}}</td>
            <td><img src="/public/images/{{portada}}" width="80" height="60"></td>
            <td><a href="/admin/editorProducto?id={{id}}"/><i class="fa fa-pencil w3-large" aria-hidden="true"></i></td>
            <td><a href="/admin/deleteProducto?id={{id}}"/><i class="fa fa-trash w3-large" aria-hidden="true"></i></td>
        </tr>
    {{/listaProductos}}
</table>