{{^editorProducto}}
    <div>
        <h1>Productos</h1>
    </div>

    <table class='w3-table w3-striped w3-hoverable'>
        <thead>
        <tr class="w3-light-grey">
            <th>Id</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Costo Sub.</th>
            <th>Portada</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        {{#listaProductos}}
            <tr>
                <td>{{id}}</td>
                <td>{{nombre}}</td>
                <td>{{tipo}}</td>
                <td>${{precio}}</td>
                <td><img src="/public/images/{{portada}}" width="80" height="60"></td>
                <td><a href="/admin/editorProducto?id={{id}}"/><i class="fa fa-pencil w3-large" aria-hidden="true"></i></td>
                <td><a href="/admin/bajaProducto?id={{id}}" class="w3-button w3-black w3-tiny w3-round-large w3-hover-teal" />Dar de baja</td>
            </tr>
        {{/listaProductos}}
    </table>
    <div>
        <h1>Productos dados de baja</h1>
    </div>
    <table class='w3-table w3-striped w3-hoverable'>
        <thead>
        <tr class="w3-light-grey">
            <th>Id</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Costo Sub.</th>
            <th>Portada</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        {{#listaProductosBaja}}
            <tr>
                <td>{{id}}</td>
                <td>{{nombre}}</td>
                <td>{{tipo}}</td>
                <td>${{precio}}</td>
                <td><img src="/public/images/{{portada}}" width="80" height="60"></td>
                <td><a href="/admin/editorProducto?id={{id}}"/><i class="fa fa-pencil w3-large" aria-hidden="true"></i></td>
                <td><a href="/admin/altaProducto?id={{id}}" class="w3-button w3-black w3-tiny w3-round-large w3-hover-teal" />Dar de alta</td>
            </tr>
        {{/listaProductosBaja}}
    </table>
{{/editorProducto}}

<!--Seccion de edicion-->
{{#editorProducto}}
    <div class="w3-container w3-content w3-center w3-padding-64 contenidista-form-container" style="max-width:500px" id="band">
        <h1 class="contenidista-form-titulo">Editar Producto - {{nombre}}</h1>
        <form action="/admin/procesarEdicionProducto" method="POST" enctype="multipart/form-data">
            <input style="display: none" type="text" name="id" value="{{id}}">
            <input style="display: none" type="text" name="tipoOrig" value="{{tipoOrig}}">
            <input style="display: none" type="text" name="portadaOrig" value="{{portadaOrig}}">
            <div>
                <label class="contenidista-form-label" for="edicion">Nombre:</label>
                <input class="w3-input w3-light-grey w3-margin-top contenidista-form-input" type="text" name="nombre" value="{{nombre}}">
            </div>
            <div class="w3-margin-top">
                <label class="contenidista-form-label" for="portada">Portada:</label>
                <input class="w3-input w3-center w3-margin-top contenidista-form-file" type="file" name="portada">
            </div>
            <div class="w3-margin-top">
                <label class="contenidista-form-label" for="tipoNuevo">Tipo:</label>
                <select name="tipoNuevo" class="w3-input w3-light-grey w3-margin-top contenidista-form-select">
                    <option value="">Cambiar tipo de producto</option>
                    {{#tipos}}
                        <option value="{{id}}">{{descripcion}}</option>
                    {{/tipos}}
                </select>
            </div>

            <button class="w3-button w3-black w3-margin-top contenidista-form-boton" type="submit">Editar</button>
        </form>
    </div>
{{/editorProducto}}
