{{#editorEdicion}}
    <div class="w3-container w3-content w3-center w3-padding-64" style="max-width:500px" id="band">
        <h1>Editar Edicion - {{edicion}}</h1>
        <form action="/admin/procesarEdicion" method="POST" enctype="multipart/form-data">
            <input style="display: none" type="text" name="id" value="{{id}}">
            <input style="display: none" name="productoOrig" value="{{productoOrig}}" type="number">
            <input style="display: none" type="text" name="portadaOrig" value="{{portadaOrig}}">
            <div>
                <label for="edicion">Edicion:</label>
                <input class="w3-input w3-light-grey w3-margin-top" type="text" name="edicion" value="{{edicion}}">
            </div>
            <div class="w3-margin-top">
                <label for="portada">Portada:</label>
                <input class="w3-input w3-center w3-margin-top" type="file" name="portada">
            </div>
            <div class="w3-margin-top">
                <label for="precio">Precio:</label>
                <input class="w3-input w3-light-grey w3-margin-top" type="number" name="precio" value="{{precio}}">
            </div>
            <div class="w3-margin-top">
                <label for="precio">Fecha:</label>
                <input class="w3-input w3-light-grey w3-margin-top" type="date" name="fecha" value="{{fecha}}">
            </div>
            <div class="w3-margin-top">
                <label for="producto">Producto:</label>
                <select name="productoNuevo" class="w3-input w3-light-grey w3-margin-top">
                    <option value="">Cambiar producto</option>
                    {{#listaProductos}}
                        <option value="{{id}}">{{nombre}}</option>
                    {{/listaProductos}}
                </select>
            </div>

            <button class="w3-button w3-black w3-margin-top" type="submit">Editar</button>
        </form>
    </div>
{{/editorEdicion}}