<div class="w3-container w3-content w3-padding-64 " id="band">
    {{^contenido}}
        <h1 class="w3-container w3-red w3-display-middle">Compr√° la edicion o suscribite para poder ver su contenido!</h1>
    {{/contenido}}

    {{#contenido}}
         <h1 class="noticia-titulo">{{titulo}}</h1>
         <h2 class="noticia-subtitulo">{{subtitulo}}</h2>

            <!--imagenes-->
            <body onload="currentSlide(1), loadMapNoticia({{latitud}}, {{longitud}})">
            <div class="slideshow-container">

              <div class="mySlides fade">
                <img src="/public/images/{{imagen1}}" style="height: 400px; width: 100%;">
              </div>

              {{#imagen2}}
              <div class="mySlides fade">
                <img src="/public/images/{{imagen2}}" style="height: 400px; width: 100%;">
              </div>
              {{/imagen2}}

              {{#imagen3}}
              <div class="mySlides fade">
                <img src="/public/images/{{imagen3}}" style="height: 400px; width: 100%;">
              </div>
              {{/imagen3}}

              {{#imagen2}}
              <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
              <a class="next" onclick="plusSlides(1)">&#10095;</a>
              {{/imagen2}}
            </div>

            {{#audio}}
            <div style="text-align: center; margin-top: 1em;">
                <audio controls>
                    <source src="/public/multimedia/{{audio}}" type="audio/mp3">
                </audio>
            </div>
            {{/audio}}

            <div class ="w3-left-align">
                <p class="noticia-contenido">{{contenido}}</p>
            </div>

            <div id="mapa" style="width:100%; height:300px;"></div>

            {{#url}}
            <div><iframe width="100%" height="300px" src="{{url}}"</iframe></div>
            {{/url}}
    {{/contenido}}
</div>
