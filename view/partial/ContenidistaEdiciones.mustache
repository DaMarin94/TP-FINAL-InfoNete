<div class="w3-left-align w3-margin-top">
    <h1 class="w3-container w3-red">{{#nombre}}{{nombre}}{{/nombre}}</h1>
    <h2>Ediciones</h2>
</div>

<table class='w3-table w3-striped'>
    <thead>
    <tr class="w3-dark-grey">
        <th>Id</th>
        <th>Edicion</th>
        <th>Precio</th>
        <th>Accion</th>
    </tr>
    </thead>
    {{#listaEdiciones}}
        <tr>
            <td>{{id}}</td>
            <td>{{edicion}}</td>
            <td>${{precio}}</td>
            <td><a href="edicion?id={{id}}" class="w3-button w3-black w3-round-large">Ver edicion</a></td>
        </tr>
    {{/listaEdiciones}}
</table>