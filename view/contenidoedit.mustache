{{> header}}

    <div class="w3-container w3-content  w3-padding-64" style="max-width:800px" id="band">
        <div style="padding-bottom: 150px;">
            {{#contenidoEdit}}
               <h1>Contenido NÂ° {{id}}</h1>

               <form action="contenidoedit/alta">
                   <input id="id" name="id" type="hidden" value="{{id}}">
                   <input id="id" name="contenidista" type="hidden" value="{{c_id}}">
                   <table class="w3-table w3-grey">
                           <tr>
                               <th>Titulo</th>
                               <td>{{titulo}}</td>
                           </tr>
                           <tr>
                               <th>Subtitulo</th>
                               <td>{{subtitulo}}</td>
                           </tr>
                            <tr>
                                <th>Contenido</th>
                                <td>{{contenido}}</td>
                            </tr>
                             <tr>
                                <th>Imagen</th>
                                <td><img src="../public/images/{{imagen}}" width="400" height="300"/></td>
                             </tr>
                             <tr>
                                <th>Contenidista</th>
                                <td>{{contenidista}}</td>
                            </tr>
                             <tr>
                                <th>Estado</th>
                                <td>
                                    <select name="estado" id="estado">
                                        {{#tipos}}
                                            <option value="{{id}}">{{descripcion}}</option>
                                        {{/tipos}}

                                    </select>
                                </td>
                             </tr>
                             <tr>
                                <th>Comentarios</th>
                                    <td>
                                        <textarea name="comentario" rows="7" cols="50">
                                            {{#reportesEdit}}
                                                {{comentarios}}
                                            {{/reportesEdit}}
                                        </textarea>
                                    </td>
                             </tr>
                   </table>
                   <button class="w3-button w3-black w3-margin-top" type="submit" style="float: right;">Enviar</button>
               </form>
            {{/contenidoEdit}}
             <div  style="padding-top: 80px;" >
                <a href="/editor/misContenidos"> Volver </a>
             </div>
        </div>
   </div>
{{> footer}}