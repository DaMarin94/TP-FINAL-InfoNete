{{> header}}

    <div class="w3-container w3-content">
        <div>
            {{#contenidoEdit}}
                <h1 class="w3-container titulo w3-center">Contenido N° {{id}}</h1>

               <form action="contenidoedit/alta">
                   <input id="id" name="id" type="hidden" value="{{id}}">
                   <input id="id" name="contenidista" type="hidden" value="{{c_id}}">

                   <h2 class="w3-black titulo2">Título</h2>
                    <div class="editor-contenido-texto">{{titulo}}</div>

                   <h2 class="w3-black titulo2">Subtítulo</h2>
                     <div class="editor-contenido-texto">{{subtitulo}}</div>

                   <h2 class="w3-black titulo2">Contenido</h2>
                     <div class="editor-contenido-texto">{{{contenido}}}</div>

                   <h2 class="w3-black titulo2">Imágenes</h2>
                     <div class="w3-row" style="display: flex;">
                        <div class="w3-col m4" style="margin: 2em 5px;">
                            <h2 class="w3-black titulo2">Imágen 1</h2>
                            <img src="../public/images/{{imagen}}" width="100%" height="300"/>
                        </div>
                        {{#imagen2}}
                        <div class="w3-col m4" style="margin: 2em 5px;">
                            <h2 class="w3-black titulo2">Imágen 2</h2>
                            <img src="../public/images/{{imagen2}}" width="100%" height="300"/>
                        </div>
                        {{/imagen2}}
                        {{#imagen3}}
                        <div class="w3-col m4" style="margin: 2em 5px;">
                            <h2 class="w3-black titulo2">Imágen 3</h2>
                            <img src="../public/images/{{imagen3}}" width="100%" height="300"/>
                        </div>
                        {{/imagen3}}
                     </div>

                   {{#audio}}
                    <h2 class="w3-black titulo2">Audio</h2>
                    <div class="editor-contenido-texto" style="text-align: center; margin-top: 1em;">
                        <audio controls>
                            <source src="/public/multimedia/{{audio}}" type="audio/mp3">
                        </audio>
                    </div>
                   {{/audio}}

                   <h2 class="w3-black titulo2">Contenidista</h2>
                     <div class="editor-contenido-texto">{{contenidista}}</div>
                     <hr>

                   <h2 class="w3-black titulo2">Reporte</h2>
                    <div class="editor-contenido-edicion">
                       <table class="w3-table">
                                 <tr>
                                    <th><div>Estado</div></th>
                                    <td><div>
                                        <select name="estado" id="estado">
                                            {{#tipos}}
                                                <option value="{{id}}">{{descripcion}}</option>
                                            {{/tipos}}

                                        </select></div>
                                    </td>
                                 </tr>
                                 <tr>
                                    <th><div>Comentarios</div></th>
                                        <td>
                                            <div><textarea name="comentario" rows="7" cols="50">
                                                {{#reportesEdit}}
                                                    {{comentarios}}
                                                {{/reportesEdit}}
                                            </textarea></div>
                                        </td>
                                 </tr>
                       </table>
                   </div>
                   <div class="w3-center">
                        <button class="w3-button w3-black w3-margin-top w3-round" type="submit">Enviar</button>
                        <a class="w3-button w3-grey w3-margin-top w3-round" href="/editor/contenidos"> Cancelar </a>
                   </div>

               </form>
            {{/contenidoEdit}}
        </div>

   </div>
{{> footer}}